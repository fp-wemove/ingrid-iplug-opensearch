<document>
  <properties>
    <title>History Ingrid OpenSearch iPlug</title>
    <author email="andre.wallat@wemove.com">André Wallat</author>
  </properties>
  <body>
    <release version="5.11.0" date="2021-01-18" description="Release 5.11.0">
      <action type="fix" dev="wemove" issue="3292">
        Kritische Sicherheitslücke Log4Shell in der weitverbreiteten Java-Logging-Bibliothek log4j
      </action>
    </release>

    <release version="5.10.0" date="2021-10-20" description="Release 5.10.0">
      <action type="fix" dev="wemove" issue="2285">
        Improve search
      </action>
    </release>

    <release version="5.7.0" date="2021-01-19" description="Release 5.7.0">
      <action type="fix" dev="wemove" issue="2239">
        Fix saving of ranking information
      </action>
    </release>

    <release version="5.5.0" date="2020-07-24" description="Release 5.5.0">
      <action type="add" dev="wemove" issue="1898">
        Change the container’s privilege to a non-root user.
      </action>
    </release>

    <release version="5.0.1" date="2019-04-11" description="Release 5.0.1">
      <action type="fix" dev="wemove">
        Fix index name generation.
      </action>
    </release>

    <release version="5.0.0" date="2019-04-05" description="Release 5.0.0">
      <action type="update" dev="wemove" issue="1196">
        Updating libraries and modernize.
      </action>
    </release>

    <release version="4.5.0" date="2018-10-08" description="Release 4.5.0">
      <action type="update" dev="wemove">
        Updated dependencies (admin-gui).
      </action>
    </release>

    <release version="4.3.0" date="2018-03-27" description="Release 4.3.0">
      <action type="update" dev="wemove">
        Updated dependencies (admin-gui).
      </action>
    </release>

    <release version="4.2.0" date="2018-01-05" description="Release 4.2.0">
      <action type="add" dev="wemove">
        Added docker integration.
      </action>
    </release>

    <release version="4.0.2" date="2017-04-06" description="Release 4.0.2">
      <action type="fix" dev="wemove" issue="REDMINE-616">
        Fixed handling of multiple values inside an index field on detail request.
      </action>
    </release>

    <release version="4.0.1" date="2017-01-30" description="Release 4.0.1">
      <action type="fix" dev="wemove" issue="REDMINE-465">
        Fixed wrong path to save data when using cygwin.
      </action>
    </release>

    <release version="3.6.2.2" date="2016-07-21" description="Release 3.6.2.2">
      <action type="fix" dev="wemove" issue="REDMINE-390">
        Fixed error in admin gui after a new installation.
      </action>
    </release>

    <release version="3.6.2" date="2016-05-13" description="Release 3.6.2">
      <action type="fix" dev="wemove" issue="REDMINE-269">
        Fixed redirect to welcome page for a logged in user.
      </action>
      <action type="add" dev="wemove" issue="REDMINE-34">
        Improved status messages while indexing.
      </action>
    </release>

    <release version="3.6.1" date="2015-11-18" description="Release 3.6.1">
      <action type="update" dev="wemove" issue="REDMINE-15">
        Remove all references to PortalU.
      </action>
      <action type="fix" dev="wemove" issue="REDMINE-176">
        Fixed query problem with wildcards.
      </action>
      <action type="update" dev="wemove" issue="REDMINE-106">
        Use encrypted password for web interface.
      </action>
    </release>

    <release version="3.6.0.3" date="2015-09-11" description="Bugfix-Release 3.6.0.3">
      <action type="fix" dev="wemove" issue="REDMINE-142,REDMINE-89">
        Fixed query generation and request of index fields.
      </action>
    </release>

    <release version="3.6.0" date="2015-06-19" description="Release 3.6.0">
      <action type="update" dev="wemove">
        Use latest version of the basic administration pages.
      </action>
    </release>

    <release version="3.5.0" date="2015-01-30" description="Release InGrid 3.5.0">
        <action type="add" dev="wemove" issue="REDMINE-524">
            Added license header to all source files for Open Source migration.
        </action>
    </release>
    <release version="3.4.0" date="2014-02-25" description="Release InGrid 3.4.0">
	    <action type="add" dev="wemove">
        Add class to extract soil relevant metadata from portalu data space (this is part of the project bodendaten.de)
      </action>
	  <action type="add" dev="wemove">
        Add patch-update strategy to installation routine.
      </action>
    </release>

  	<release version="3.3.0" date="2013-03-05" description="Release InGrid 3.3">
      <action type="add" dev="wemove" issue="INGRID-2189">
        If Mapping is active and the mapped parameter is set to '[]' then this parameter will not be mapped
        but only the value is used.
      </action>
      <action type="fix" dev="wemove" issue="INGRID-2156">
        Fix problem when heartbeats were not sent anymore.
      </action>
      <action type="add" dev="wemove" issue="INGRID-2150">
        Add java parameter "-Dfile.encoding=UTF8" to start script.
      </action>
      <action type="add" dev="wemove" issue="INGRID33-4">
        Added local working directory, so that temp-dir is not deleted accidentally when cleaning up global temp dir.
      </action>
      <action type="update" dev="wemove" issue="INGRID-2156">
        Connect to iBus even if the iBus was started after the iPlug.
      </action>
      <action type="update" dev="wemove" issue="INGRID-2214">
        Ignore not mapped parameters or those who are inactive, so that only the query term and active mapped parameters are requested.
      </action>
    </release>

    <release version="3.2.0" date="" description="Release InGrid 3.2">
      <action type="add" issue="">
        Take also terms of boolean sub queries into account.
      </action>
      <action type="add" issue="">
        Add facet capabilities, see springapp-servlet.xml for details (see plugDescriptionFacetCounter). This feature must be configured.
      </action>
      <action type="fix" dev="wemove">
        Fix problem in start script. Heap memory settings were not set correctly.
      </action>
      <action type="fix" issue="">
        Fix bug with iplug, if a opensearch response item has no description tag.
      </action>
      <action type="fix" issue="">
        Make boolean operator handling more consistent. Trailing spaces must be set in spring configuration to be able to support "-" and "NOT " equaly.
      </action>
      <action type="update" dev="wemove" issue="INGRID-1885">
        Updated start.sh, which had an issue when being batch-invoked, deleted RSYNC which is no longer used, see https://dev.wemove.com/jira/browse/INGRID-1885
      </action>
    </release>
    <release version="3.1.0.1" date="" description="Bugfix Release InGrid 3.1">
      <action type="fix" issue="INGRID-2010">
        Fixed inconsistency of setting of ranking parameter.
      </action>
    </release>
    <release version="3.1.0" date="2011-09-15" description="Release InGrid 3.1">
      <action type="add" issue="INGRID-1975">
        Added new pluggable ranking modification (linear modification of scores for BW).
      </action>
      <action type="add" issue="INGRID-1988">
        Added support for AND, OR, NOT and phrases in searches.
      </action>
      <action type="fix" issue="INGRID-1992">
        Changed logging behavior, so that not so many files will be created.
      </action>
    </release>

    <release version="3.0.1.1" date="2011-08-03" description="Bugfix Release for InGrid 3.0.1">
      <action type="fix" issue="INGRID-1940">
        Fixed "metainfo" functionality for "deny"/"allow".
      </action>
    </release>

    <release version="3.0.1" date="2011-07-04" description="Add-Ons + Bugfixes for InGrid 3.0">
      <action type="update" issue="INGRID-1940">
        Introduced new field "metainfo" in query for various control info to be handled by iBus / iPlugs.
      </action>
    </release>

	  <release version="3.0.0" date="2011-05-06" description="InGrid Release3.0.0">
      <action type="fix" dev="wemove">
        Minor fixes during administration.
      </action>
    </release>

    <release version="2.3.1" date="2011-01-25" description="Update dependencies Release">
      <action type="fix" dev="wemove">
        Fix start script for running on Ubuntu.
      </action>
      <action type="update">
		Use most current dependencies (jars) !
      </action>
    </release>

    <release version="1.0.0" date="2010-07-27" description="Initial Release">
      <action type="add" dev="wemove" issue="INGRID21-10">
        Implementierung eines generischen OpenSearch iPlugs
      </action>
    </release>
  </body>
</document>
